<%= render 'establishments/external_orders/header' %>

<% content_for :external_order_template_show_title do %>
  <h5>Efector proveedor</h5>
<% end %>
          
<% content_for :action_buttons do %>
  <div>
    <% if policy(@external_order_template).destroy? %>
      <button type="button" 
        class="btn btn-danger btn-sm mr-1 ml-1 delete-item"
        title="<%= t("actions.tooltip.delete") %>"
        data-toggle="tooltip"
        data-placement="top"
        data-target="#delete-item" 
        data-title="Eliminar plantilla"
        data-body="Esta seguro que desea eliminar la plantilla <%= @external_order_template.name %>?"
        data-href="<%= external_orders_templates_provider_url(@external_order_template) %>">
          <%= fa_icon "trash" %>
      </button>
    <% end %>
  </div>
  <div>
    <%= link_to 'Volver', external_orders_templates_path, class: "btn btn-light mr-2" %>
    <% if policy(@external_order_template).show? %>
      <%= link_to external_orders_templates_provider_path(format: 'pdf'), class: 'btn btn-info mr-1', target: :_blank do %>
        <%= fa_icon "print" %> Imprimir
      <% end %>
    <% end %>
    <% if policy(:external_order_template_provider).edit?(@external_order_template) %>
      <%= link_to edit_external_orders_templates_provider_path(@external_order_template), :"data-turbolinks" => false,
        class: "btn btn-warning mr-2" do %>
        <%= fa_icon "pen" %>
        Editar
      <% end %>
    <% end %>
    <% if policy(:external_order_template_provider).use_template?(@external_order_template) %>
      <%= link_to build_from_template_external_orders_templates_provider_path(@external_order_template), method: :post, class: "btn btn-primary", target: :_blank do %>
        <%= fa_icon "plus" %>
        Crear despacho
      <% end %>
    <% end %>
  </div>
<% end %>

<%= render 'establishments/external_orders/templates/show' %>