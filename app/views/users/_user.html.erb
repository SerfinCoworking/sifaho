<tr id="user_<%= user.id %>">
  <td>
    <% if user.profile.present? %>
      <span><%= image_tag user_avatar(user, 25), size: '25', class: "rounded" %></span>
    <% end %>
  </td>
  <td><%= user.username %></td>
  <% if user.profile.present? %>
    <td><%= user.profile.last_name.present? ? user.profile.last_name : '----' %></td>
    <td><%= user.profile.first_name.present? ? user.profile.first_name : '----'%></td>
    <td><%= user.profile.email.present? ? user.profile.email : '----' %></td>
  <% else %>
    <td>Sin perfil</td>
    <td>s/p</td>
    <td>s/p</td>
  <% end %>
  <td><%= user.sectors.count %></td>
  <td><%= user.updated_at.strftime("%d/%m/%Y")%> </td>
  <td class="text-left actions-col">
    <% if policy(user).show? %>
      <%= link_to users_admin_path(user), class: 'btn btn-secondary btn-sm', 
        title: 'Ver detalles', data: { toggle: 'tooltip', placement: 'top', detail: 'view' } do %>
        <%= fa_icon "eye" %>
      <% end %>
    <% end %>
    <% if policy(:permission).edit? %>
      <%= link_to edit_permissions_users_admin_path(user), class: 'btn btn-warning btn-sm', 
        title: 'Editar permisos', data: { toggle: 'tooltip', placement: 'top', permissions: 'view' } do %>
        <%= fa_icon "lock" %>
      <% end %>
    <% end %>
  </td>
</tr>
