<div class="card fixed-custom-card">
  <div class="card-header <%= @bed.new_record? ? 'bg-primary text-white' : 'bg-warning' %> d-flex align-items-center justify-content-between">
    <div class="d-flex align-items-center ml-2">
      <%= fa_icon (@bed.new_record? ?  "plus" : "edit")%>
      <h5 class="card-title mb-0 ml-2">
        <%= @bed.new_record? ? "Agregar cama" : "Editando cama" %>
      </h5>
    </div>
    <%= link_to :back, class: @bed.new_record? ? 'btn text-white' : 'btn' do %>
      <%= fa_icon "times" %>
    <% end %>
  </div>
  <div class="card-body" id="panel-body-new">

   <%= simple_form_for @bed, html: {class: "", role: 'check-modified'} do |f| %>
      <%= f.error_notification %>

      <div class="row">
        <div class="col-md-4">
          <%= f.input :name, required: true, label: 'Nombre' %>
        </div>

        <div class="col-md-4">
            <%= f.input :bedroom_id, label: 'Habitaci贸n',
              collection: @bedrooms.map {|bedroom|  [bedroom.name, bedroom.id ]},
              :input_html => {
                required: true,
                include_blank: false,
                class: 'selectpicker custom-select-pick',
                "data-width"=>"100%",
                "data-size"=>"10",
                "title"=>"Seleccionar habitaci贸n",
                "data-live-search"=>true,
                "data-none-results-text" => "No se encontr贸 el habitaci贸n"
              }
            %>
        </div>

      </div>
    <% end %>

  </div>

  <div class="card-footer d-flex justify-content-end">
    <%= link_to 'Volver', beds_path, class: 'btn mr-2' %>
    <button type='submit' name='commit' class='btn btn-success' form="<%= @bed.new_record? ? 'new_bed' : 'edit_bed_' + @bed.id.to_s %>">
      <%= fa_icon 'save' %> Guardar
    </button>
  </div>
</div>
