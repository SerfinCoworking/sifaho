
<div id="sidebar-wrapper">

  <div class="link-group">
    <%= link_to main_app.profile_path(current_user.profile), class: "list-group-item list-group-item-action list-custom profile-link #{active_class('profiles')}" do %>
      <span class="img-container">
        <%= image_tag user_avatar(current_user, 35), class:"rounded-circle img-profile-nav" %>
      </span>
      <span class="ml-2 sb-title">
        <%= current_user.full_name.titleize %>
      </span>

    <% end %>

    <%= link_to main_app.root_path, class: "list-group-item list-group-item-action list-custom #{active_class('welcome')}" do %>
      <span class="sb-icon">
        <%= fa_icon "home" %>
      </span>
      <span class="ml-2 sb-title">Inicio</span>
    <% end %>

    <% if policy(Prescription).new? %>
      <%= link_to main_app.new_prescription_path,  class: "list-group-item list-group-item-action list-custom #{active_class('outpatient_prescriptions')} #{active_class('chronic_prescriptions')} #{active_class('prescriptions')}" do %>
        <span class="sb-icon">
          <%= fa_icon "signature" %>
        </span>
        <span class="ml-2 sb-title">Recetas</span>
      <% end %>
    <% end %>

    <% if policy(InpatientPrescription).index? %>
      <%= link_to main_app.inpatient_prescriptions_path, class: "list-group-item list-group-item-action list-custom 
        #{active_class('prescriptions/inpatient_prescriptions')} #{active_class('prescriptions/beds')} 
        #{active_class('prescriptions/bedrooms')} #{active_class('prescriptions/inpatient_movements')}" do %>
        <span class="sb-icon">
          <%= fa_icon "procedures" %>
        </span>
        <span class="ml-2 sb-title">Internación</span>
      <% end %>
    <% end %>

    <% if policy(Sector).index? %>
      <%= link_to main_app.sectors_path, class: "list-group-item list-group-item-action list-custom 
        #{active_class_folder('sectors')}" do %>
        <span class="sb-icon">
          <%= fa_icon "bezier-curve" %>
        </span>
        <span class="ml-2 sb-title">Sectores</span>
      <% end %>
    <% end %>

    <% if policy(Establishment).index? %>
      <%= link_to main_app.external_orders_summary_path, class: "list-group-item list-group-item-action list-custom
        #{active_class_folder('establishments')}" do %>
        <span class="sb-icon">
          <%= fa_icon "hospital" %>
        </span>
        <span class="ml-2 sb-title">Establecimientos</span>
      <% end %>
    <% end %>
    
    <% if policy(Purchase).index? %>
      <%= link_to main_app.purchases_path, class: "list-group-item list-group-item-action list-custom #{active_class('purchases')}" do %>
        <span class="sb-icon">
          <%= fa_icon "truck-moving" %>
        </span>
        <span class="ml-2 sb-title">Abastecimientos</span>
      <% end %>
    <% end %>

    <% if policy(SanitaryZone).index? %>
      <%= link_to main_app.sanitary_zones_path, class: "list-group-item list-group-item-action list-custom #{active_class('sanitary_zones')}" do %>
        <span class="sb-icon">
          <%= fa_icon "map" %>
        </span>
        <span class="ml-2 sb-title">Zonas sanitarias</span>
      <% end %>
    <% end %>

    <% if policy(Stock).index? %>
      <%= link_to main_app.stocks_path, class: "list-group-item list-group-item-action list-custom #{active_class('stocks')} #{active_class('stock_movements')} #{active_class('receipts')} #{active_class('lot_stocks')}" do %>
        <span class="sb-icon">
          <%= fa_icon "cubes" %>
        </span>
        <span class="ml-2 sb-title">Stock</span>
      <% end %>
    <% end %>

    <% if policy(Lot).index? %>
      <%= link_to main_app.lots_path, class: "list-group-item list-group-item-action list-custom #{active_class('lots')}
        #{active_class('lot_provenances')}"  do %>
        <span class="sb-icon">
          <%= fa_icon "barcode" %>
        </span>
        <span class="ml-2 sb-title">Lotes Provincia</span>
      <% end %>
    <% end %>

    <% if policy(Product).index? %>
      <%= link_to main_app.products_path, class: "list-group-item list-group-item-action list-custom 
        #{active_class('products')} #{active_class('snomed_concepts')}" do %>
        <span class="sb-icon">
          <%= fa_icon "pills" %>
        </span>
        <span class="ml-2 sb-title">Productos</span>
      <% end %>
    <% end %>

    <% if policy(Area).index? %>
      <%= link_to main_app.tree_view_areas_path, class: "list-group-item list-group-item-action list-custom #{active_class('areas')}" do %>
        <span class="sb-icon">
          <%= fa_icon "sitemap" %>
        </span>
        <span class="ml-2 sb-title">Rubros</span>
      <% end %>
    <% end %>

    <% if policy(Professional).index? %>
      <%= link_to main_app.professionals_path, class: "list-group-item list-group-item-action list-custom #{active_class('professionals')}" do %>
        <span class="sb-icon">
          <%= fa_icon "user-md" %>
        </span>
        <span class="ml-2 sb-title">Médicos</span>
      <% end %>
    <% end %>

    <% if policy(Patient).index? %>
      <%= link_to main_app.patients_path, class: "list-group-item list-group-item-action list-custom #{active_class('patients')}" do %>
        <span class="sb-icon">
          <%= fa_icon "user-injured" %>
        </span>
        <span class="ml-2 sb-title">Pacientes</span>
      <% end %>
    <% end %>

    <% if policy(Laboratory).index? %>
      <%= link_to main_app.laboratories_path, class: "list-group-item list-group-item-action list-custom #{active_class('laboratories')}" do %>
        <span class="sb-icon">
          <%= fa_icon "vial" %>
        </span>
        <span class="ml-2 sb-title">Laboratorios</span>
      <% end %>
    <% end %>

    <% if policy(User).index? %>
      <%= link_to main_app.users_admin_index_path, class: "list-group-item list-group-item-action list-custom 
        #{active_class('users')} #{active_class('permission_requests')}" do %>
        <span class="sb-icon">
          <%= fa_icon "users" %>
        </span>
        <span class="ml-2 sb-title">Usuarios</span>
      <% end %>
    <% end %>

    <% if policy(Report).index? %>
      <%= link_to main_app.new_reports_stock_quantity_report_path, class: "list-group-item list-group-item-action list-custom #{active_class_folder('reports')}" do %>
        <span class="sb-icon">
          <%= fa_icon "file-alt" %>
        </span>
        <span class="ml-2 sb-title"> Reportes</span>
      <% end %>
    <% end %>

    <% if policy(PatientProductStateReport).index? %>
      <%= link_to main_app.new_state_reports_patient_product_state_report_path, class: "list-group-item list-group-item-action list-custom #{active_class_folder("state_reports")}" do %>
        <span class="sb-icon">
          <%= fa_icon "file-alt" %>
        </span>
        <span class="ml-2 sb-title"> Reportes provincia</span>
      <% end %>
    <% end %>
  </div>
</div>
