    </div><br>
      <%= button_tag(type: 'submit', class: "btn btn-success btn-md btn-block show-spin") do %>
        <%= image_tag("eclipse.gif", size: "25x25", class: "spinner") %> Iniciar sesi칩n
      <% end %>
  <% end %>
</div>
