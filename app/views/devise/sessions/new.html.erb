<style>
body {
   background-image: url("<%= asset_path('bg-sifaho.jpg') %>");
}
</style>
<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <%= image_tag("LogoSIFAHO.png", size: "70x70", alt: "Logo Sifaho") %>
    <h3>Iniciar sesi칩n</h3>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%- if devise_mapping.registerable? %>
        <%= link_to 'Registrarse', new_registration_path(resource_name), class: 'right'  %>
      <% end -%>
      <%= f.label 'Usuario' %>
      <%= f.text_field :username, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%- if devise_mapping.recoverable? %>
        <%= link_to "Olvidaste tu contrase침a?", new_password_path(resource_name), class: 'right' %>
      <% end -%>
      <%= f.label 'Contrase침a' %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
      <% if devise_mapping.rememberable? -%>
        <div class="checkbox" style="width:150px">
          <label>
            <%= f.check_box :remember_me %> Recordarme
          </label>
        </div>
      <% end -%>
      <%= button_tag(type: 'submit', class: "btn btn-success btn-md btn-block show-spin") do %>
        <%= image_tag("eclipse.gif", size: "25x25", class: "spinner") %> Iniciar sesi칩n
      <% end %>
  <% end %>
</div>
	

