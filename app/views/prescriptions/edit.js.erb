// Add the dialog title
$('#dialog h3').html("<i class=' glyphicon glyphicon-pencil'></i>  Editando prescripción");

// Render the edit form
$('.modal-body').html('<%= j render("form") %>');

// Add form button
$('.modal-footer').html(
  "<button type='button' class='btn btn-default pull-left' data-dismiss='modal'>Volver</button>"+
  "<button type='submit' class='btn btn-primary pull-right' form='edit_prescription_<%=@prescription.id%>' value='Guardar cambios'>Guardar cambios</button>"
);

// Show the dynamic dialog
$('#dialog').modal("show");

// Set focus to the first element
$('#dialog').on('shown.bs.modal', function () {
  $('.first_input').focus()
})

$('.chosen-select').chosen({
    allow_single_deselect: true,
    no_results_text: 'No se encontró el resultado',
    width: '300px'});

<%= render 'form_function' %>

$('#prescription_date_received').val("<%= @prescription.date_received.strftime("%d/%m/%y %H:%M %p") %>");
$('#prescription_date_dispensed').val("<%= @prescription.date_dispensed.strftime("%d/%m/%y %H:%M %p") %>");
